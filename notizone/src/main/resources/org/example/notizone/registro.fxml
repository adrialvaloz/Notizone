                <HBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="60.0" prefWidth="343.0" style="-fx-alignment: center;">
                    <children>
                        <Label text="Notizone">
                            <font>
                                <Font size="28.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <VBox style="-fx-background-color: #ffffff; -fx-padding: 20px; -fx-border-radius: 30px; -fx-background-radius: 30px;">
